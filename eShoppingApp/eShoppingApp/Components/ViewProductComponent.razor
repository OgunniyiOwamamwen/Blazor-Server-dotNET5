@page "/product/{id:int}"

@inject IViewProduct viewProduct

<h3>Product Details</h3>

<div class="card mb-3" style="width: 20rem;">
    <div class="card-body">
        <img class="card-img-top" src="@_product.ImageLink" />
        <h5 class="card-title">@_product.Name</h5>
        <h6 class="card-subtitle mb-2 text-muted">@_product.Brand</h6>
        <br />
        <div class="card-block">
            <p>
                Price: <label style="color:darkred">$&nbsp;@_product.Price.ToString()</label>
            </p>

            <p class="card-text">@_product.Description</p>
            </div>
        </div>
    </div>

<br />
<NavLink href="products">Back to Product</NavLink>


@code {

    private Product _product;

    [Parameter]
    public int Id { get; set; }

    protected override void OnParametersSet()
    {
        base.OnParametersSet();
        //
        if(Id > 0)
        {
            _product = viewProduct.Execute(Id);
        }
    }
}
